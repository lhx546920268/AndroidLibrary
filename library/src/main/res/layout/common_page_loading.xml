<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:background="@color/fragment_gray_background">

    <!--页面加载中-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--菊花-->
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/loading_progress_bar"
            android:minWidth="@dimen/loading_progress_bar_size"
            android:minHeight="@dimen/loading_progress_bar_size"
            android:maxHeight="@dimen/loading_progress_bar_size"
            android:maxWidth="@dimen/loading_progress_bar_size"
            android:layout_marginRight="5dp"
            android:id="@+id/progress_bar"/>

        <!--文字-->
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_page_loading_text"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:id="@+id/text_view"
            />

    </LinearLayout>

</FrameLayout>
