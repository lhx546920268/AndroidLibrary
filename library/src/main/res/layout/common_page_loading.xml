<?xml version="1.0" encoding="utf-8"?>
<com.lhx.library.loading.PageLoadingView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:background="@color/fragment_gray_background">

    <!--页面加载中-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--菊花-->
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:id="@+id/loading"/>

        <!--文字-->
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_page_loading_text"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:id="@+id/text_view"
            />

    </LinearLayout>

</com.lhx.library.loading.PageLoadingView>
