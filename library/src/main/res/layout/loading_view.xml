<?xml version="1.0" encoding="utf-8"?>
<com.lhx.library.loading.LoadingView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--加载中弹窗-->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:id="@+id/container"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--菊花-->
            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/loading_progress_bar"
                android:minWidth="@dimen/loading_progress_bar_size"
                android:minHeight="@dimen/loading_progress_bar_size"
                android:maxHeight="@dimen/loading_progress_bar_size"
                android:maxWidth="@dimen/loading_progress_bar_size"
                android:layout_marginBottom="5dp"
                android:id="@+id/progress_bar"/>

            <!--文字-->
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:id="@+id/text_view"
                />

        </LinearLayout>

    </FrameLayout>

</com.lhx.library.loading.LoadingView>
