<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:paddingBottom="20dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp">

    <!--加载中弹窗-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--菊花-->
        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/loading_progress_bar"
            android:minWidth="@dimen/loading_progress_bar_size"
            android:minHeight="@dimen/loading_progress_bar_size"
            android:maxHeight="@dimen/loading_progress_bar_size"
            android:maxWidth="@dimen/loading_progress_bar_size"
            android:layout_marginBottom="5dp"
            android:id="@+id/progress_bar"/>

        <!--文字-->
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_loading_text"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:id="@+id/text_view"
            />

    </LinearLayout>


</FrameLayout>
